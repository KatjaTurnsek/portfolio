{
  "plugins": ["plugins/markdown"],
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  },
  "source": {
    "include": ["src/js", "README.md"],
    "includePattern": ".+\\.(js|jsx|mjs|cjs|jsdoc)?$",
    "exclude": ["node_modules", "dist", "build", ".vite", "coverage", "assets/images", "assets/pdf"]
  },
  "sourceType": "module",
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": false
  },
  "opts": {
    "destination": "./docs",
    "recurse": true,
    "verbose": true,
    "encoding": "utf8",
    "readme": "README.md",
    "template": "node_modules/minami"
  }
}
