{
  "name": "my-portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:gh": "cross-env GH_PAGES=1 vite --base=/portfolio/",
    "build": "vite build",
    "build:gh": "cross-env GH_PAGES=1 vite build --base=/portfolio/ && shx cp -f dist/index.html dist/404.html",
    "predeploy": "npm run build:gh",
    "deploy": "gh-pages -d dist",
    "preview": "vite preview",
    "preview:gh": "cross-env GH_PAGES=1 vite preview --base=/portfolio/",
    "start:dist": "serve -s dist",
    "prettier:check": "prettier . --check",
    "prettier:write": "prettier . --write",
    "format": "npm run prettier:write",
    "docs": "jsdoc -c jsdoc.json"
  },
  "engines": {
    "node": ">=18"
  },
  "browserslist": [
    "defaults",
    "not dead",
    ">0.2%",
    "iOS >= 12",
    "Safari >= 13"
  ],
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "cssnano": "^7.1.1",
    "gh-pages": "^6.3.0",
    "jsdoc": "^4.0.4",
    "minami": "^1.2.3",
    "postcss": "^8.5.6",
    "postcss-preset-env": "^10.4.0",
    "prettier": "^3.6.2",
    "shx": "^0.3.4",
    "vite": "^6.3.5",
    "vite-plugin-handlebars": "^1.5.0"
  },
  "dependencies": {
    "gsap": "^3.13.0",
    "split-type": "^0.3.4"
  }
}
