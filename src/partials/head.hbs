<meta charset='UTF-8' />
<meta name='viewport' content='width=device-width, initial-scale=1' />
<meta name='color-scheme' content='light dark' />

<!-- Content Security Policy (meta version; header-only directives omitted) -->
<meta
  http-equiv='Content-Security-Policy'
  content="
    default-src 'self';
    base-uri 'self';
    object-src 'none';
    upgrade-insecure-requests;
    block-all-mixed-content;
    script-src 'self' 'unsafe-inline';
    style-src 'self' 'unsafe-inline' https://fonts.googleapis.com;
    font-src 'self' https://fonts.gstatic.com;
    img-src 'self' data: blob:;
    connect-src 'self';
    worker-src 'self' blob:;
  "
/>

<title>{{site.title}}</title>
<meta name='description' content='{{site.description}}' />

<!-- Make all relative URLs resolve under '/' or '/portfolio/' -->
<base href='{{base}}' />
<script>window.__BASE_URL__ = '{{base}}';</script>
<style
>
  :root{
    --waves-vector-light: url('{{base}}assets/images/vector-waves-light.svg');
    --waves-vector-dark: url('{{base}}assets/images/vector-waves-dark.svg');
    --waves-raster-light: url('{{base}}assets/images/waves-light.webp');
    --waves-raster-dark: url('{{base}}assets/images/waves-dark.webp');
  }
</style>

{{! =========================
     Fonts
     ========================= }}
<link rel='preconnect' href='https://fonts.googleapis.com' />
<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />

<link
  rel='preload'
  as='style'
  href='https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Playfair+Display:wght@400;700&display=swap'
/>
<link
  rel='stylesheet'
  href='https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Playfair+Display:wght@400;700&display=swap'
  media='print'
  onload="this.media='all'"
/>
<noscript>
  <link
    rel='stylesheet'
    href='https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Playfair+Display:wght@400;700&display=swap'
  />
</noscript>

{{! =========================
     Preload header/menu wave layers (base-aware)
     ========================= }}
<link
  rel='preload'
  as='image'
  href='{{base}}assets/images/waves-light.webp'
  media='(prefers-color-scheme: light)'
/>
<link
  rel='preload'
  as='image'
  href='{{base}}assets/images/waves-dark.webp'
  media='(prefers-color-scheme: dark)'
/>
<link
  rel='preload'
  as='image'
  href='{{base}}assets/images/vector-waves-light.svg'
  type='image/svg+xml'
  media='(prefers-color-scheme: light)'
/>
<link
  rel='preload'
  as='image'
  href='{{base}}assets/images/vector-waves-dark.svg'
  type='image/svg+xml'
  media='(prefers-color-scheme: dark)'
/>

<!-- Favicon / icons -->
<link rel='icon' href='{{base}}favicon.ico?v=1' sizes='any' />

<!-- Canonical points to the site base; router will update at runtime -->
<link rel='canonical' href='{{base}}' />