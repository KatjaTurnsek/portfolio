<meta charset='UTF-8' />
<meta name='viewport' content='width=device-width, initial-scale=1' />
<meta name='color-scheme' content='light dark' />

<title>{{site.title}}</title>
<meta name='description' content='{{site.description}}' />

<!-- Make all relative URLs resolve under '/' or '/portfolio/' -->
<base href='{{base}}' />
<script>window.__BASE_URL__ = '{{base}}';</script>

{{! =========================
     Fonts
     ========================= }}
<link rel='preconnect' href='https://fonts.googleapis.com' />
<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />

<link
  rel='preload'
  as='style'
  href='https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Playfair+Display:wght@400;700&display=swap'
/>
<link
  rel='stylesheet'
  href='https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Playfair+Display:wght@400;700&display=swap'
  media='print'
  onload="this.media='all'"
/>
<noscript>
  <link
    rel='stylesheet'
    href='https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Playfair+Display:wght@400;700&display=swap'
  />
</noscript>

{{! =========================
     Preload header/menu wave layers (base-aware)
     ========================= }}
<link
  rel='preload'
  as='image'
  href='{{baseHref}}assets/images/waves-light.webp'
  media='(prefers-color-scheme: light)'
/>
<link
  rel='preload'
  as='image'
  href='{{baseHref}}assets/images/waves-dark.webp'
  media='(prefers-color-scheme: dark)'
/>
<link
  rel='preload'
  as='image'
  href='{{baseHref}}assets/images/vector-waves-light.svg'
  type='image/svg+xml'
  media='(prefers-color-scheme: light)'
/>
<link
  rel='preload'
  as='image'
  href='{{baseHref}}assets/images/vector-waves-dark.svg'
  type='image/svg+xml'
  media='(prefers-color-scheme: dark)'
/>

<!-- Favicon / icons -->
<link rel='icon' href='{{baseHref}}assets/images/logo-katjadev-dark.svg' type='image/svg+xml' />

<!-- Canonical points to the site base; router will update at runtime -->
<link rel='canonical' href='{{base}}' />