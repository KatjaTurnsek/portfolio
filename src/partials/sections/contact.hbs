<section
  class='fullscreen-section'
  id='contact'
  data-title='Contact â€” Work with Katja Turnsek'
  data-description='Get in touch about freelance projects or front-end roles. Email contact@katjadev.com or use the form.'
>
  <div class='rows'>
    <div class='row'>
      <h1>Contact</h1>
      <h2>Let's create something great together!</h2>
      <p class='align-right-60'>
        Whether you're looking for a creative mind to join your team or need a freelancer for your
        next project, I'd love to hear from you.
      </p>
    </div>

    <div class='row'>
      <p class='info-text'>
        Email
        <a href='mailto:contact@katjadev.com'>contact@katjadev.com</a>
        or use the form
      </p>

      <div class='contact-form-wrapper'>
        <form
          class='contact-form'
          action='https://formsubmit.co/contact@katjadev.com'
          method='POST'
        >
          <input type='hidden' name='_captcha' value='false' />

          <!-- Set at runtime to: https://<current-origin>/<base>#thank-you -->
          <input type='hidden' name='_next' value='' data-next-hash='#thank-you' />

          <div class='name-row'>
            <div class='form-group'>
              <label for='first-name'>First Name</label>
              <input
                type='text'
                id='first-name'
                name='first-name'
                autocomplete='given-name'
                required
              />
            </div>
            <div class='form-group'>
              <label for='last-name'>Last Name</label>
              <input
                type='text'
                id='last-name'
                name='last-name'
                autocomplete='family-name'
                required
              />
            </div>
          </div>

          <div class='form-group full-width'>
            <label for='email'>Email</label>
            <input type='email' id='email' name='email' autocomplete='email' required />
          </div>

          <div class='form-group full-width'>
            <label for='message'>Message</label>
            <textarea id='message' name='message' rows='4' autocomplete='off' required></textarea>
          </div>

          <div class='button-wrapper'>
            <button type='submit' class='submit-button'>
              Send
              <i class='fa-solid fa-arrow-right-long' aria-hidden='true'></i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Tiny helper to set the FormSubmit _next URL to origin + BASE + #thank-you -->
  <script>
    (function () { try { var base = (window.__BASE_URL__ || '/').replace(/\/?$/, '/'); // ensures
    trailing slash var u = new URL(base, window.location.origin); var hash =
    document.querySelector('input[name="_next"][data-next-hash]')?.getAttribute('data-next-hash') ||
    '#thank-you'; u.hash = hash.replace(/^#/, ''); var next =
    document.querySelector('form.contact-form input[name="_next"]'); if (next) next.value = u.href;
    } catch (e) { /* noop */ } })();
  </script>
</section>